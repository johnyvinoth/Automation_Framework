<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Mobile Test Suite" parallel="true">
    <test name="AndroidTests">
        <groups>
            <run>
                <include name="android" />
            </run>
        </groups>
        <classes>
            <class name="com.mobile.tests.AndroidMobileTest" />
        </classes>
    </test>
    <test name="iOSTests" parallel="true">
        <groups>
            <run>
                <include name="ios" />
            </run>
        </groups>
        <classes>
            <class name="com.mobile.tests.iOSMobileTest" />
        </classes>
    </test>
</suite>
